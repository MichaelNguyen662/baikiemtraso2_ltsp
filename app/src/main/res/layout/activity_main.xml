<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/chuyendoiamduong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#FFC107"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Chuyển đổi lịch âm - dương" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
        android:id="@+id/namduonglich"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:gravity="center|left"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Năm dương lịch" />

        <EditText
            android:id="@+id/duonglich"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:ems="10"
            android:textSize="16dp"
            android:gravity="center"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:text="" />

        <Button
            android:id="@+id/buttonchuyendoi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Chuyển đổi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/namamlich"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:textSize="20dp"
            android:gravity="center|left"
            android:textStyle="bold"
            android:text="Năm âm lịch" />

        <TextView
            android:id="@+id/amlich"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:background="#8BC34A"
            android:textSize="20dp"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#FFC107"/>

</LinearLayout>